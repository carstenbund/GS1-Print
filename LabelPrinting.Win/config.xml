<?xml version="1.0" encoding="utf-8"?>
<!--
  Label geometry is defined in millimeters. Update the values below to change the
  physical size and positioning of the GS1 DataMatrix label without recompiling
  the application.
-->
<LabelLayouts>
  <!-- Physical inset from the paper edge to where labels start. Applied once per page. -->
  <PageInsetMm>5</PageInsetMm>

  <!-- Spacing between labels in millimeters. Must be zero or positive. -->
  <LabelMarginMm>1</LabelMarginMm>

  <!-- Baseline 25x20 mm label with a centered DataMatrix and text underneath. -->
  <Gs1DataMatrixLabel>
    <!-- Total label width in millimeters. -->
    <WidthMm>25</WidthMm>
    <!-- Total label height in millimeters. -->
    <HeightMm>20</HeightMm>
    <!-- DataMatrix rectangle: X offset, Y offset, width, height (all millimeters). -->
    <BarcodeRectMm x="5.5" y="1.5" width="8" height="8" />
    <!-- Text rectangle: X offset, Y offset, width, height (all millimeters). -->
    <TextRectMm x="1.5" y="10" width="22" height="9" />
  </Gs1DataMatrixLabel>
</LabelLayouts>
